{
  "manifest_version": 3,
  "name": "SF Pegasus",
  "version": "1.3.0",
  "description": "Swift navigation for Salesforce - Jump to Setup, Flows, Users and more with keyboard shortcuts",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.lightning.force.com/*",
        "*://*.salesforce.com/*",
        "*://*.salesforce-setup.com/*",
        "*://*.cloudforce.com/*",
        "*://*.visualforce.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "search": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Open Setup Search"
    },
    "users": {
      "suggested_key": {
        "default": "Alt+Shift+U",
        "mac": "Alt+Shift+U"
      },
      "description": "Open User Search"
    },
    "flows": {
      "suggested_key": {
        "default": "Alt+Shift+F",
        "mac": "Alt+Shift+F"
      },
      "description": "Go to Flows"
    },
    "objects": {
      "suggested_key": {
        "default": "Alt+Shift+O",
        "mac": "Alt+Shift+O"
      },
      "description": "Go to Object Manager"
    }
  }
}
